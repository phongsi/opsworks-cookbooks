check process clockworkd_<%= @application %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/clockworkd.<%= @application %>.pid
  start program = "/usr/bin/sudo /bin/su - <%= @deploy[:user] %> -c 'cd <%= @deploy[:current_path] %> && RAILS_ENV=<%= @deploy[:rails_env] %> bundle exec clockworkd start -c lib/clock.rb -i <%= @application %> --pid-dir=<%= @deploy[:deploy_to] %>/shared/pids'" with timeout 90 seconds
  stop program = "/usr/bin/sudo /bin/su - <%= @deploy[:user] %> -c 'cd <%= @deploy[:current_path] %> && RAILS_ENV=<%= @deploy[:rails_env] %> bundle exec clockworkd stop -c lib/clock.rb -i <%= @application %> --pid-dir=<%= @deploy[:deploy_to] %>/shared/pids'" with timeout 30 seconds
  group clockworkd_<%= @application %>
