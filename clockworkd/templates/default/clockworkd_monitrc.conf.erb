check process clockworkd_<%= @app_name %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/clockworkd.<%= @app_name %>.pid
  start program = "/usr/bin/sudo /bin/su - deploy -c 'cd <%= @deploy[:deploy_to] %>/current; RAILS_ENV=production bundle exec clockworkd start -c lib/clock.rb -i <%= @app_name %> --pid-dir=<%= @deploy[:deploy_to] %>/shared/pids'" with timeout 90 seconds
  stop program = "/usr/bin/sudo /bin/su - deploy -c 'cd <%= @deploy[:deploy_to] %>/current; RAILS_ENV=production bundle exec clockworkd stop -c lib/clock.rb -i <%= @app_name %> --pid-dir=<%= @deploy[:deploy_to] %>/shared/pids'" with timeout 30 seconds
  group clockworkd_<%= @app_name %>
